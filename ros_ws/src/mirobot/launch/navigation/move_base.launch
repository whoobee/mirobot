<launch>

    <arg name="cmd_vel_topic" default="cmd_vel"/>
    <arg name="odom_topic" default="odom" /> 
    
    <node pkg="move_base"
          type="move_base"
          name="move_base"
          respawn="false"
          output="screen">

          <rosparam file="$(find mirobot)/config/costmap_common_params.yaml"
                    command="load"
                    ns="global_costmap"/>

          <rosparam file="$(find mirobot)/config/costmap_common_params.yaml"
                    command="load"
                    ns="local_costmap"/>

          <rosparam file="$(find mirobot)/config/local_costmap_params.yaml"
                    command="load"/>

          <rosparam file="$(find mirobot)/config/global_costmap_params.yaml"
                    command="load"/>

          <rosparam file="$(find mirobot)/config/base_local_planner_params.yaml"
                    command="load"/>

          <remap from="cmd_vel" 
                 to="$(arg cmd_vel_topic)"/>

          <remap from="odom" 
                 to="$(arg odom_topic)"/>

    </node>

</launch>